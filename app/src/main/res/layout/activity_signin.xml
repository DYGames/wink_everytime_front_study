<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp">

    <EditText
        android:id="@+id/signin_id"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="ID"
        app:layout_constraintBottom_toTopOf="@+id/signin_pw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/signin_pw"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/signin_button"
        app:layout_constraintTop_toBottomOf="@+id/signin_id" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="로그인"
        app:layout_constraintBottom_toTopOf="@+id/signin_signup"
        app:layout_constraintTop_toBottomOf="@+id/signin_pw" />

    <Button
        android:id="@+id/signin_signup"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="회원 가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_button" />
</androidx.constraintlayout.widget.ConstraintLayout>